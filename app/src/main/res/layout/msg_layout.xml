<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/msg_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/vec_rple"
        android:minWidth="200dp"
        android:orientation="vertical">

        <com.technetminds.whatsrecovery.recover.deleted.messages.wamr.statussaver.AppUtils.RobotoLight
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/lightdark"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="6dp" />

        <com.technetminds.whatsrecovery.recover.deleted.messages.wamr.statussaver.AppUtils.RobotoRegular
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="2dp"
            android:gravity="end"
            android:textColor="@color/lightdark"
            android:textSize="10sp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="14dp" />
    </LinearLayout>
</LinearLayout>
